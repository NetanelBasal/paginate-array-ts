{
  "compilerOptions": {                  
    "target": "es5",                        
    "module": "commonjs",                     
    "lib": ["dom", "es2016"],
    "declaration": true,
    "outDir": "./dist",      
    "noImplicitAny": false,
    "strict": true,                
    "noUnusedLocals": true,
    "noUnusedParameters": true, 
    "exclude": [
      "node_modules"
    ],
    "typeRoots": ["./node_modules/@types"]
  }
}